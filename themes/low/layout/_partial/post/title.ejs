<% if (post.link){ %>
  <h1 itemprop="name">
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <a href="<%- url_for(post.path) %>">
      <%= post.title %>
    </a>
  <% } else { %>
    <h1 itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>